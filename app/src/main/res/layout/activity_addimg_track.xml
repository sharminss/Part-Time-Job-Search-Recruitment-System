<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingLeft="15dp"
    tools:context="com.example.asus_x454l.quickjob.AddimgTrack">

    <TextView
        android:text="Job Name:"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:text="Salary:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="17sp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:layout_alignBaseline="@+id/salarys"
        android:layout_alignBottom="@+id/salarys"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"


        android:ems="10"
        android:id="@+id/salarys"
        android:layout_below="@+id/jobnames"
        android:layout_alignLeft="@+id/jobnames"
        android:text="text"
        android:textColor="@color/black"

        android:layout_alignStart="@+id/jobnames" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:ems="10"
        android:id="@+id/jobnames"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:paddingTop="15dp"
        android:layout_toEndOf="@+id/textView"
        android:text="text2"
        android:textColor="@color/black"

        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:textSize="17dp"
        android:paddingTop="15dp"
        android:layout_alignBottom="@+id/times"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:id="@+id/times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/salarys"
        android:layout_alignStart="@+id/salarys"
        android:layout_below="@+id/salarys"

        android:textColor="@color/black"
        android:ems="10"
        android:paddingTop="15dp"
        android:text="text"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experience:"
        android:textStyle="bold|italic"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:paddingTop="15dp"

        android:layout_alignBottom="@+id/exps"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/exps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="text"
        android:paddingTop="15dp"
        android:layout_below="@+id/times"
        android:textColor="@color/black"
        android:layout_alignLeft="@+id/times"
        android:layout_alignStart="@+id/times" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education:"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:textSize="17sp"
        android:paddingTop="15dp"

        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:id="@+id/edus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"


        android:layout_below="@+id/exps"
        android:text="text"
        android:textColor="@color/black"
        android:paddingTop="15dp"
        android:layout_alignLeft="@+id/exps"
        android:layout_alignStart="@+id/exps" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Requirment:"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:textSize="17sp"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"

        android:layout_below="@+id/edus"
        />

    <TextView
        android:id="@+id/reqs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingTop="15dp"
        android:text="text"
        android:layout_below="@id/edus"
        android:textColor="@color/black"

        android:layout_alignLeft="@+id/jobnames"
        android:layout_alignStart="@+id/jobnames" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingTop="15dp"
        android:textStyle="bold|italic"
        android:textSize="17dp"

        android:paddingLeft="30dp"
        android:text="Contact no:"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:id="@+id/contacts"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/reqs"
        android:layout_below="@+id/reqs"
        android:ems="10"
        android:textColor="@color/black"

        android:text="text2" />

    <TextView
        android:id="@+id/textView9"
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:textSize="17dp"
        android:text="Address:"
        android:paddingLeft="30dp"
         android:layout_below="@id/textView3"

        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:id="@+id/adds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="fr"
        android:paddingTop="15dp"
        android:textColor="@color/black"
        android:layout_below="@+id/contacts"
        android:layout_alignLeft="@+id/contacts"
        android:layout_alignStart="@+id/contacts"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/adds"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/adds"
        android:layout_marginBottom="79dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:text="Apply Now!"
        android:onClick="apply_m"
        android:background="@color/teal"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

</RelativeLayout>
